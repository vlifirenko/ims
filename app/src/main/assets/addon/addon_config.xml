    <uses-permission name="addon.permission.COMMAND" />
    <uses-permission name="addon.permission.SHARE" />
    <uses-permission name="addon.permission.TAB" />
    <uses-permission name="addon.permission.CAMERA" />
    <uses-permission name="addon.permission.TRANSLATE" />
    <uses-permission name="addon.permission.FILE" />
    <uses-permission name="addon.permission.EVENT_RECEIVER" />
    <uses-permission name="addon.permission.PAGE" />

    <event-receiver name="com.ims.addons.PageFinishEventReceiver"
