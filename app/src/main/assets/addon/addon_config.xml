<?xml version="1.0" encoding="utf-8"?>
<addon name="@string/addon_name" icon="addon/icon.png" description="@string/description"
    detail="@string/addon_detail" minSdkVersion="2.0">

    <uses-permission name="addon.permission.SELECTION_TEXT" />
    <uses-permission name="addon.permission.MEMORY" />
    <uses-permission name="addon.permission.SCREENSHOT" />
    <uses-permission name="addon.permission.FAVICON" />
    <uses-permission name="addon.permission.BOOKMARKS" />
    <uses-permission name="addon.permission.HISTORY" />
    <uses-permission name="addon.permission.DOWNLOAD" />
    <uses-permission name="addon.permission.NAVIGATION" />
    <uses-permission name="addon.permission.FLOATVIEW" />
    <uses-permission name="addon.permission.BANNER" />
    <uses-permission name="addon.permission.TOAST" />
    <uses-permission name="addon.permission.DIALOG" />
